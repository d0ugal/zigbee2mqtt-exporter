{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  // Enable automatic merging for all updates
  automerge: true,
  packageRules: [
    {
      // Auto-merge minor and patch updates
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
    {
      // Auto-merge all dev dependencies
      matchDepTypes: [
        'devDependencies',
      ],
      automerge: true,
    },
    {
      // Enable indirect dependency updates for Go modules
      matchManagers: [
        'gomod',
      ],
      matchDepTypes: [
        'indirect',
      ],
      enabled: true,
    },
    {
      // Auto-run go mod tidy for Go module updates
      matchManagers: [
        'gomod',
      ],
      postUpdateOptions: [
        'gomodTidy',
      ],
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/Makefile/',
      ],
      matchStrings: [
        'GOLANGCI_LINT_VERSION := (?<currentValue>v[\\d\\.]+)',
      ],
      depNameTemplate: 'golangci/golangci-lint',
      datasourceTemplate: 'docker',
      versioningTemplate: 'semver',
    },
  ],
}
